<h1 class="center-align">{{{ title }}}</h1>

{{> alerts/error message=error}}
{{> alerts/success message=message}}

<div class="row">
  <div class="col s4">
    <div class="card">
      <div class="card-image waves-effect waves-block waves-light center-align green accent-3">
        <i class="large material-icons">playlist_add</i>
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4">
          Создай задачу!
          Измени сроки, сложность и статус
        </span>
        {{#if isAuth}}
          <p>
            <a href="/tasks/add" class="btn waves-effect waves-light deep-orange accent-3 grey-text text-darken-4">Создать</a>
          </p>
        {{/if}}
      </div>
    </div>
  </div>

  <div class="col s4">
    <div class="card">
      <div class="card-image waves-effect waves-block waves-light center-align yellow accent-3">
        <i class="large material-icons">format_list_numbered</i>
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4">
          Посмотри запланированные
          и сделанные задачи
        </span>
        {{#if isAuth}}
          <p>
            <a href="/tasks" class="btn waves-effect waves-light yellow accent-3 grey-text text-darken-4">Посмотреть
            список</a>
          </p>
        {{/if}}
      </div>
    </div>
  </div>

  <div class="col s4">
    <div class="card">
      <div class="card-image waves-effect waves-block waves-light center-align deep-orange accent-3">
        <i class="large material-icons">account_box</i>
      </div>

      <div class="card-content">
        {{#if isAuth}}
          {{> profile/shortUserInfo . }}
        {{else}}
          {{> profile/login . }}
        {{/if}}
      </div>
    </div>
  </div>
</div>
