<h1>{{{ title }}}</h1>

{{> alerts/success message=messages}}
{{> alerts/error message=errors}}

<div class="profile row">
  <div class="col s6">
    <img src="{{getLinkAvatar user}}" alt="" class="avatar circle responsive-img">
    {{>profile/avatar}}
  </div>
  <div class="col s6">
    <ul class="collection with-header">
      <li class="collection-header">
        <h4>{{user.name}}</h4>
      </li>
      <li class="collection-item">
        <span class="badge">
          {{user.email}}
        </span>
        Email
      </li>
      <li class="collection-item">
        <div><span class="new badge" data-badge-caption="">{{tasksCount}}</span>Всего задач</div>
      </li>
      <li class="collection-item">
        <span class="badge">{{outputPassword user.password}}</span>
        Password
      </li>
      <li class="collection-item">
        Новый пароль
        <div class="secondary-content">{{>profile/password}}</div>
      </li>
    </ul>

    <a href="/profile/logout" class="btn waves-effect waves-light green accent-3 grey-text text-darken-4">Выйти</a>
  </div>
</div>
